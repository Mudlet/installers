<project>
    <shortName>Mudlet</shortName>
    <fullName>Mudlet</fullName>
    <version>3.3.1</version>
    <licenseFile>COPYING</licenseFile>
    <leftImage>mudlet_installer_left_side.png</leftImage>
    <logoImage>mudlet.png</logoImage>
    <wmImage>mudlet_main_48px.png</wmImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment></comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Mudlet</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/mudlet.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                    <ruleList>
                        <isTrue value="${createdesktop}"/>
                    </ruleList>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>mudlet.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>mudlet.svg</origin>
                        </distributionFile>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Start Mudlet to play MUDs!</comment>
                            <exec>${installdir}/bin/run-mudlet.sh</exec>
                            <icon>${installdir}/mudlet.png</icon>
                            <name>Run Mudlet</name>
                            <path>${installdir}/bin</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec></windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath></windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Root folder 32bit</description>
                    <destination>${installdir}</destination>
                    <name>rootfolder32bit</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Windows 32bit</description>
                    <destination>${installdir}</destination>
                    <name>windows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../../../../usr/share/hunspell/en_US.aff</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../../../usr/share/hunspell/en_US.dic</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../mudlet-lua</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>windows-binaries-32bit/en_US.dic</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/lfs.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libeay32.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libEGL.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libGLESv2.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libhunspell-1.4-0.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libpcre-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libsqlite3-0.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libstdc++-6.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libwinpthread-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libyajl.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/libzip-2.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/lua-utf8.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/lua51.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/mudlet.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5Core.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5Gui.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5Multimedia.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5Network.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5OpenGL.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/Qt5Widgets.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/rex_pcre.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/ssleay32.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/zip.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>windows-binaries-32bit/zlib1.dll</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>windows-binaries-32bit/imageformats</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>windows-binaries-32bit/audio</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>windows-binaries-32bit/luasql</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>windows-binaries-32bit/mediaservice</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>windows-binaries-32bit/platforms</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files (windows)</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>mudlet_main_48px.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
    </componentList>
    <postInstallationActionList>
        <createShortcuts>
            <destination>${windows_folder_common_startmenu}\Programs</destination>
            <ruleList>
                <isTrue>
                    <value>${createshortcut}</value>
                </isTrue>
            </ruleList>
            <shortcutList>
                <startMenuShortcut>
                    <comment></comment>
                    <name>Mudlet</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/mudlet.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </shortcutList>
        </createShortcuts>
    </postInstallationActionList>
    <compressionAlgorithm>lzham-ultra</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <enableUpx>1</enableUpx>
    <productDisplayIcon>${installdir}/mudlet_main_48px.ico</productDisplayIcon>
    <productUrlInfoAbout>http://mudlet.org</productUrlInfoAbout>
    <saveRelativePaths>1</saveRelativePaths>
    <singleInstanceCheck>1</singleInstanceCheck>
    <startMenuGroupName></startMenuGroupName>
    <vendor>Mudlet makers</vendor>
    <windowsExecutableIcon>mudlet_main_48px.ico</windowsExecutableIcon>
    <windowsUninstallerExecutableIcon>mudlet_main_48px.ico</windowsUninstallerExecutableIcon>
    <finalPageActionList>
        <runProgram>
            <program>${installdir}/mudlet.exe</program>
            <programArguments>&amp;</programArguments>
            <progressText>Run ${project.fullName} now</progressText>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
        <parameterGroup>
            <name>Shortcuts</name>
            <explanation></explanation>
            <value></value>
            <default></default>
            <parameterList>
                <booleanParameter>
                    <name>createshortcut</name>
                    <description>Would you like to create a start menu shortcut?</description>
                    <explanation></explanation>
                    <value>1</value>
                    <default></default>
                    <displayStyle>checkbox-left</displayStyle>
                </booleanParameter>
                <booleanParameter>
                    <name>createdesktop</name>
                    <description>Would you like to create a Desktop shortcut?</description>
                    <explanation></explanation>
                    <value>0</value>
                    <default></default>
                    <displayStyle>checkbox-left</displayStyle>
                </booleanParameter>
            </parameterList>
        </parameterGroup>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>windows</platform>
        </platformOptions>
    </platformOptionsList>
</project>

